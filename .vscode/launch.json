    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": ":: with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "<path_to_quad_ops>/::",
            "console": "integratedTerminal",
            "args": " test run_file simple_file.txt"
        },
        {
            "name": "Throw Error: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "<path_to_quad_ops>/::",
            "console": "integratedTerminal",
            "args": " test run_file simple_file.txts"
        }
    ]
}